<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartTour</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartTour.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm mb-4">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">SmartTour</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark @((ViewContext.RouteData.Values["controller"]?.ToString() == "Home") ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @((ViewContext.RouteData.Values["controller"]?.ToString() == "Users") ? "active" : "")"
                               asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @((ViewContext.RouteData.Values["controller"]?.ToString() == "Places") ? "active" : "")"
                               asp-controller="Places" asp-action="Index">Places</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @((ViewContext.RouteData.Values["controller"]?.ToString() == "Trips") ? "active" : "")"
                               asp-controller="Trips" asp-action="Index">Trips</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark @((ViewContext.RouteData.Values["controller"]?.ToString() == "Recommendations") ? "active" : "")"
                               href="#" id="recommendDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Recommendations
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="recommendDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Recommendations" asp-action="ByPlace" asp-route-placeKey="paris">
                                        By Place
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Recommendations" asp-action="ByTags" asp-route-userKey="alice">
                                        By Tags
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark @((ViewContext.RouteData.Values["action"]?.ToString() == "Privacy") ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-light border-top mt-4 py-3">
        <div class="container text-center">
            <span class="text-muted">&copy; 2025 SmartTour &middot; <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>