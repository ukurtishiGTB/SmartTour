@model SmartTour.Models.Place
@{
    ViewData["Title"] = "Place Details";
}

<div class="container py-4">
    <h1 class="display-6 mb-3">Place Details</h1>
    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Key</dt>
                <dd class="col-sm-9">@Model.Key</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">@Model.Type</dd>

                <dt class="col-sm-3">City</dt>
                <dd class="col-sm-9">@Model.City</dd>

                <dt class="col-sm-3">Country</dt>
                <dd class="col-sm-9">@Model.Country</dd>

                <dt class="col-sm-3">Tags</dt>
                <dd class="col-sm-9">@string.Join(", ", Model.Tags)</dd>

                @*<dt class="col-sm-3">Coordinates</dt>
                <dd class="col-sm-9">@Model.Coordinates?.Latitude, @Model.Coordinates?.Longitude</dd>*@
            </dl>
        </div>
    </div>
    <div class="d-flex">
        <a asp-action="Edit" asp-route-key="@Model.Key" class="btn btn-warning me-2">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>