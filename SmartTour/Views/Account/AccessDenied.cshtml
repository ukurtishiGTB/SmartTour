@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <h1 class="display-6 mb-4" style="color: var(--st-secondary-dark);">Access Denied</h1>
                    <p class="lead mb-4">You do not have permission to access this resource.</p>
                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4 gap-3">Return Home</a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary px-4">Sign In</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>