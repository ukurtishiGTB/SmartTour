@{
    ViewData["Title"] = "No Recommendations Found";
}

<div class="container py-5">
    <div class="text-center">
        <div class="mb-4">
            <i class="bi bi-search text-primary" style="font-size: 4rem;"></i>
        </div>
        <h1 class="display-5 mb-3">No Recommendations Found</h1>
        <p class="lead text-muted mb-4">
            We couldn't find any destinations matching your preferences at the moment.
            Try adjusting your search criteria or exploring different interests.
        </p>
        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-house-door me-2"></i>Go Home
            </a>
            <a asp-controller="TripPlanning" asp-action="PlanTrip" asp-route-userKey="@ViewBag.UserKey" class="btn btn-outline-primary">
                <i class="bi bi-arrow-repeat me-2"></i>Try Again
            </a>
        </div>
    </div>
</div> 