@model SmartTour.Models.Trip
@{
    ViewData["Title"] = "Create Trip";
}

<div class="container py-4">
    <h1 class="display-6 mb-3">Create New Trip</h1>
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="form-floating">
                            <input asp-for="Key" class="form-control" placeholder="Key" />
                            <label asp-for="Key">Key</label>
                            <span asp-validation-for="Key" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-floating">
                            <input asp-for="UserId" class="form-control" placeholder="UserId" />
                            <label asp-for="UserId">UserId</label>
                            <span asp-validation-for="UserId" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="PlacesCsv" class="form-control" placeholder="PlacesCsv" />
                            <label asp-for="PlacesCsv">Places (comma-separated)</label>
                            <span asp-validation-for="PlacesCsv" class="text-danger small"></span>
                        </div>
                        <small class="text-muted">e.g. paris, rome, barcelona</small>
                    </div>
                    <div class="col-md-3">
                        <div class="form-floating">
                            <input asp-for="StartDate" class="form-control" placeholder="Start Date" type="date" />
                            <label asp-for="StartDate">Start Date</label>
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-floating">
                            <input asp-for="EndDate" class="form-control" placeholder="End Date" type="date" />
                            <label asp-for="EndDate">End Date</label>
                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            <textarea asp-for="Notes" class="form-control" placeholder="Notes" style="height: 100px"></textarea>
                            <label asp-for="Notes">Notes</label>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Create Trip</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>