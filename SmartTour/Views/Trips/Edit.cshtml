@model SmartTour.Models.Trip
@{
    ViewData["Title"] = "Edit Trip";
}

<div class="container py-4">
    <h1 class="display-6 mb-3">Edit Trip</h1>
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Key" />
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="form-floating">
                            <input asp-for="UserKey" class="form-control" placeholder="UserId" />
                            <label asp-for="UserKey">UserId</label>
                            <span asp-validation-for="UserKey" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Places" class="form-control" placeholder="PlacesCsv" />
                            <label asp-for="Places">Places (comma-separated)</label>
                            <span asp-validation-for="Places" class="text-danger small"></span>
                        </div>
                        <small class="text-muted">e.g. paris, rome, barcelona</small>
                    </div>
                    <div class="col-md-3">
                        <div class="form-floating">
                            <input asp-for="StartDate" class="form-control" placeholder="Start Date" type="date" />
                            <label asp-for="StartDate">Start Date</label>
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-floating">
                            <input asp-for="EndDate" class="form-control" placeholder="End Date" type="date" />
                            <label asp-for="EndDate">End Date</label>
                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>